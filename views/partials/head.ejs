<% String.prototype.toTitleCase = function() {const words = this.split(' ');words.forEach(word => {if (!word.charAt(0).match(/\*/)) {word = word.charAt(0).toUpperCase() + word.substring(1).toLowerCase();} else word.replace('*', '');return words.join(' ').trim();})} %>
<% let useTitle; try {useTitle = title.toTitleCase()} catch {useTitle = "Respie"}; %>
<% let useStyle; try {useStyle = stylesheets} catch {useStyle = false}; %>

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title><%= useTitle %></title>
<link rel="stylesheet" href="/css/style.css" />
<script defer type="text/javascript" src="/js/script.js"></script>
<script defer type="text/javascript" src="/js/incision-lite.js"></script>
<% if (useStyle) { %>
<% useStyle.forEach(stylesheet => { %>
    <link rel="stylesheet" href="/css/<%= stylesheet %>.css" />
<% })} %>